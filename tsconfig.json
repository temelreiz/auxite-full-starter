{
  "compilerOptions": {
    /* =============================
       âœ… Temel yapÄ±landÄ±rma
    ============================== */
    "target": "ES2020",
    "lib": [
      "DOM",
      "ES2020"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    /* =============================
       âœ… Alias & Paths (Ã¶nemli kÄ±sÄ±m)
    ============================== */
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "*"
      ]
    },
    /* =============================
       âœ… Types & Environment
    ============================== */
    "types": [
      "node"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  /* =============================
     âœ… Dahil edilecek dosyalar
  ============================== */
  "include": [
    "next-env.d.ts",
    "src/**/*",
    "next.config.ts",
    ".next/types/**/*.ts"
  ],
  /* =============================
     ðŸš« HariÃ§ tutulanlar
  ============================== */
  "exclude": [
    "node_modules"
  ]
}
